<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:wowza="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.LiveStreamRoomFragment">
    <com.wowza.gocoder.sdk.api.player.WOWZPlayerView
            android:id="@+id/video_player"
            wowza:scaleMode="fill"
            app:layout_constraintDimensionRatio="H, 9:16"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:id="@+id/top_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/broadcaster_info_box"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/broadcaster_avatar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@drawable/sample_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/broadcaster_avatar"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginStart="10dp"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:id="@+id/broadcaster_name_text"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="Username"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:tint="#000"
                            android:id="@+id/watcher_icon"
                            app:layout_constraintTop_toBottomOf="@id/broadcaster_name_text"
                            app:layout_constraintLeft_toLeftOf="@id/broadcaster_name_text"
                            android:src="@drawable/group_24px"
                            android:layout_width="20dp" android:layout_height="20dp"
                            android:contentDescription="TODO"/>
                    <TextView
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_marginStart="3dp"
                            android:text="35"
                            app:layout_constraintBottom_toBottomOf="@id/watcher_icon"
                            app:layout_constraintTop_toTopOf="@id/watcher_icon"
                            app:layout_constraintLeft_toRightOf="@id/watcher_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:id="@+id/subscribe_button"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/subscribe"
                            app:layout_constraintLeft_toRightOf="@id/broadcaster_name_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="35dp"
                            android:layout_marginEnd="8dp"
                            android:layout_height="35dp"
                            android:contentDescription="TODO"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
                android:tint="#FFF"
                android:id="@+id/love_button"
                android:src="@drawable/heart"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/broadcaster_info_box"
                app:layout_constraintTop_toTopOf="@id/broadcaster_info_box"
                app:layout_constraintLeft_toRightOf="@id/broadcaster_info_box"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="TODO"/>
        <ImageView
                android:tint="#FFF"
                android:id="@+id/donate_button"
                android:src="@drawable/donation"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/love_button"
                app:layout_constraintTop_toTopOf="@id/love_button"
                app:layout_constraintLeft_toRightOf="@id/love_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="TODO"/>

        <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/close_x"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="TODO"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments_recycler_view"
            android:elevation="2dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/chat_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/chat_input"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/send_btn"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@id/input_wrapper"
                app:layout_constraintTop_toTopOf="@id/input_wrapper"
                android:elevation="2dp"
                app:layout_constraintRight_toRightOf="@id/input_wrapper"
                android:src="@drawable/send"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="TODO"/>
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/input_wrapper"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#D9FFFFFF"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/comment_edit_txt"
                    android:paddingStart="15dp"
                    android:paddingEnd="37dp"
                    android:imeOptions="actionDone"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:hint="Say hi..."
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"/>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>