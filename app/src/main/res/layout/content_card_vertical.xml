<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/live_stream_card_container"
                android:visibility="visible"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/img_wrapper"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="200dp"
                    android:layout_height="150dp">
                <ImageView
                        android:id="@+id/live_stream_card_img"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_travel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/content_thumbnail"/>
            </com.google.android.material.card.MaterialCardView>
            <ImageView
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="1dp"
                    android:src="@drawable/live"
                    app:layout_constraintRight_toRightOf="@id/img_wrapper"
                    app:layout_constraintTop_toTopOf="@id/img_wrapper"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            <TextView
                    android:textColor="#222831"
                    android:id="@+id/live_stream_card_title"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="@id/img_wrapper"
                    app:layout_constraintLeft_toRightOf="@id/img_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="The title of the live stream"
                    android:layout_width="0dp"
                    android:fontFamily="@font/playfair_display"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#393E46"
                    android:id="@+id/live_stream_card_broadcaster_name_txt"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="@id/live_stream_card_title"
                    app:layout_constraintTop_toBottomOf="@id/live_stream_card_title"
                    android:fontFamily="@font/playfair_display"
                    android:textSize="12sp"
                    android:text="Broadcaster Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/live_stream_card_watcher_icon"
                    app:layout_constraintLeft_toLeftOf="@id/live_stream_card_broadcaster_name_txt"
                    app:layout_constraintTop_toBottomOf="@id/live_stream_card_broadcaster_name_txt"
                    android:src="@drawable/user"
                    android:layout_width="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="15dp"
                    android:contentDescription="TODO"/>
            <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/live_stream_card_watcher_txt"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toRightOf="@id/live_stream_card_watcher_icon"
                    app:layout_constraintTop_toTopOf="@id/live_stream_card_watcher_icon"
                    app:layout_constraintBottom_toBottomOf="@id/live_stream_card_watcher_icon"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:text="500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
                android:elevation="3dp"
                android:id="@+id/live_stream_card_container_placeholder"
                android:layout_width="match_parent"
                app:shimmer_auto_start="true"
                app:layout_constraintTop_toTopOf="@id/live_stream_card_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/img_wrapper_placeholder"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="200dp"
                        android:layout_height="150dp">
                    <View
                            android:id="@+id/live_stream_card_img_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPlaceholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/content_thumbnail"/>
                </com.google.android.material.card.MaterialCardView>
                <View
                        android:id="@+id/live_stream_card_title_placeholder"
                        android:layout_marginStart="12dp"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        app:layout_constraintTop_toTopOf="@id/img_wrapper_placeholder"
                        app:layout_constraintLeft_toRightOf="@id/img_wrapper_placeholder"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="0dp"
                        android:background="@color/colorPlaceholder"
                        android:layout_height="20dp"/>
                <View
                        android:background="@color/colorPlaceholder"
                        android:id="@+id/live_stream_card_broadcaster_name_txt_placeholder"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="5dp"
                        app:layout_constraintLeft_toLeftOf="@id/live_stream_card_title_placeholder"
                        app:layout_constraintTop_toBottomOf="@id/live_stream_card_title_placeholder"
                        style="@style/TextAppearance.MaterialComponents.Caption"
                        android:layout_width="0dp"
                        android:layout_height="20dp"/>
                <View
                        android:id="@+id/live_stream_card_watcher_icon_placeholder"
                        app:layout_constraintLeft_toLeftOf="@id/live_stream_card_broadcaster_name_txt_placeholder"
                        app:layout_constraintTop_toBottomOf="@id/live_stream_card_broadcaster_name_txt_placeholder"
                        android:background="@color/colorPlaceholder"
                        android:layout_width="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="15dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
